<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/esp_activity_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="50dip"
    android:paddingRight="50dip"
    tools:context="com.espressif.iot.ui.login.LoginActivity" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@drawable/esp_login_head" />

    <EditText
        android:id="@+id/login_edt_account"
        style="@style/LoginEditText"
        android:layout_marginTop="35dip"
        android:drawableLeft="@drawable/esp_login_icon_email"
        android:hint="@string/esp_login_account"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/login_edt_password"
        style="@style/LoginEditText"
        android:drawableLeft="@drawable/esp_login_icon_password"
        android:hint="@string/esp_login_password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <Space
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/forget_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esp_login_forget_password"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+id/login_btn_login"
            style="@style/YellowButton"
            android:layout_gravity="left"
            android:text="@string/esp_login_login" />

        <Button
            android:id="@+id/login_btn_register"
            style="@style/BlueButton"
            android:layout_gravity="right"
            android:text="@string/esp_login_register" />
    </FrameLayout>

    <TextView
        android:id="@+id/login_text_third_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dip"
        android:text="@string/esp_login_third_party"
        android:textColor="@android:color/white" />

</LinearLayout>